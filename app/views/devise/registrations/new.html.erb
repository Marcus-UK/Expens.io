<div id='devise-forms'>
<h2>Sign up</h2>
  <div id='inputs'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: 'text-field' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", id: 'text-field' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", id: 'text-field' %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary', id: 'site-buttons' %>
    </div><br>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
