<div align='center'>
<h1>Your expenses</h1>

<table>
  <tr>
    <th>Expense type</th>
    <th>Amount</th>
    <th>Description</th>
  </tr>

  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.expense_type %></td>
      <td><%= expense.amount %></td>
      <td><%= expense.description %></td>
      <td><%= link_to 'Show', expense_path(expense) %></td>
    </tr>
  <% end %>
</table>

</div>
