<div align='center'>
<%= form_with model: @expense, local: true do |form| %>

<% if @expense.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@expense.errors.count, "error") %> prohibited
      this expense from being saved:
    </h2>
    <ul>
      <% @expense.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= form.label :expense_type %><br>
    <%= form.select :expense_type, ['Travel', 'Lunch', 'Dinner', 'Accommodation']%>
  </p>

  <p>
    <%= form.label :amount %><br>
    <%= form.number_field :amount, :step => '0.01' %>
  </p>

  <p>
    <%= form.label :date %><br>
    <%= form.date_select :date %>
  </p>


  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
</div>
